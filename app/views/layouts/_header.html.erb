<header>
  <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to root_path, class: "navbar-brand" do %>
        <span>Bookers</span>
      <% end %>
      <div class = "navbar-collapse" id = "navber-droppdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li class = "nav-item"><%= link_to ' Home',user_path(current_user), class: 'fas fa-home nav-link text-light' %></li>
            <li class = "nav-item"><%= link_to ' Users',users_path, class: 'fas fa-user-alt nav-link text-light' %></li>
